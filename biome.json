{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"files": {
		"includes": [
			"**",
			"!**/coverage/**/*",
			"!**/packages/**/*/coverage/**/*",
			"!**/packages/infrastructure/cdk.out/**/*",
			"!**/node_modules/**/*",
			"!**/.amazonq/**/*"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"semicolons": "always",
			"bracketSpacing": true,
			"quoteStyle": "single",
			"trailingCommas": "es5"
		}
	}
}
